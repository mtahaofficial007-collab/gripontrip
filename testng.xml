<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="GripOnTripTravel-Test-Suite">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <test name="GripOnTrip Smoke Tests" >
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.RegistrationTests" />
            <class name="tests.LoginTests" />
        </classes>
    </test>

    <test name="GripOnTrip Sanity Tests" >
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>
        <classes>
            <class name="tests.RegistrationTests" />
            <class name="tests.LoginTests" />
        </classes>
    </test>

    <test name="GripOnTrip Regression Tests" >
        <groups>
            <run>
                <include name="regression"/>

            </run>
        </groups>
        <classes>
            <class name="tests.RegistrationTests" />
            <class name="tests.LoginTests" />
        </classes>
    </test>
</suite>